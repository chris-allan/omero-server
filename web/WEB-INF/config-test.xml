<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>	
	<!-- ***** CONFIG ***** -->
	<!-- property placeholder post-processor -->
	<bean id="placeholderConfig"
      class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
		<list>
			<value>spring.properties</value>
		</list>
		</property>
	</bean>

	<!-- Add this config file to the getConfigLocations() of your tests
		if you want data and interfaces injected -->
	<bean id="data" class="org.openmicroscopy.omero.tests.OMEPerformanceData" init-method="init">
		<property name="dataSource" ref="dataSource"/>
	</bean>

</beans>
